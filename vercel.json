{
    "version": 2,
    "builds": [
      {
        "src": "modular_django/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "modular_django/wsgi.py"
      }
    ],
    "env": {
      "DJANGO_SETTINGS_MODULE": "modular_django.settings",
      "SECRET_KEY": "test123",
      "DEBUG": "False",
      "ALLOWED_HOSTS": ".vercel.app"
    }
  }